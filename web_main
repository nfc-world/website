<div class="container">
    <!-- Sample Product 1 -->
    <div class="card">
        <img src="card1.jpg" alt="Визитка Стил 1">
        <h2>Онлайн Визитка - Стил 1</h2>
        <p>Цена: 20 лв.</p>
        <button onclick="addToCart('Онлайн Визитка - Стил 1', 20)">Добави в количката</button>
    </div>

    <!-- Sample Product 2 -->
    <div class="card">
        <img src="card2.jpg" alt="Визитка Стил 2">
        <h2>Онлайн Визитка - Стил 2</h2>
        <p>Цена: 25 лв.</p>
        <button onclick="addToCart('Онлайн Визитка - Стил 2', 25)">Добави в количката</button>
    </div>
</div>

<!-- Cart Section -->
<div class="cart" id="cart">
    <h2>Количка</h2>
    <div id="cart-items"></div>
    <p class="cart-total" id="cart-total">Общо: 0 лв.</p>
    <button onclick="buyItems()">Купи</button>
</div>

<script>
    let cart = [];

    function addToCart(name, price) {
        cart.push({ name, price });
        updateCart();
    }

    function removeFromCart(index) {
        cart.splice(index, 1);
        updateCart();
    }

    function updateCart() {
        const cartItemsDiv = document.getElementById('cart-items');
        cartItemsDiv.innerHTML = '';

        let total = 0;
        cart.forEach((item, index) => {
            const itemDiv = document.createElement('div');
            itemDiv.className = 'cart-item';

            itemDiv.innerHTML = `
                <p>${item.name} - ${item.price} лв.</p>
                <button onclick="removeFromCart(${index})">Премахни</button>
            `;
            cartItemsDiv.appendChild(itemDiv);

            total += item.price;
        });

        document.getElementById('cart-total').textContent = `Общо: ${total} лв.`;
    }

function buyItems() {
    if (cart.length === 0) {
        alert("Количката ви е празна!");
        return;
    }

    // Съхраняване на брой чипове и обща сума в localStorage
    const total = cart.reduce((acc, item) => acc + item.price, 0);
    const itemCount = cart.length;

    localStorage.setItem('cartCount', itemCount);
    localStorage.setItem('cartTotal', total);
    
    // Изпразвяне на количката
    cart = [];
    updateCart();

    // Пренасочване към checkout.html
    window.location.href = 'checkout.html';

        }
</script>

